# JWT Configuration
JWT_SECRET=your-256-bit-random-secret-here
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=class-registration-app
JWT_AUDIENCE=class-registration-users

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# Security Configuration
BCRYPT_SALT_ROUNDS=14
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# AWS SNS Configuration (Optional - for MFA email/SMS delivery)
# If not configured, MFA codes will be logged to console
# Create an SNS topic in AWS Console and add the ARN here
# Example: arn:aws:sns:us-east-1:123456789012:ClassRegistrationMFA
SNS_TOPIC_ARN=your-sns-topic-arn

# Database Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
