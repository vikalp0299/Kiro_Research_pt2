{
  "name": "class-registration-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Class Registration System",
  "scripts": {
    "test": "jest --verbose --detectOpenHandles",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**"
    ]
  }
}